<idea-plugin>
    <id>DafnyPlugin4Intellij.DafnyPlugin4Intellij</id>
    <name>Dafny4Intellij</name>
    <vendor email="daniel.figia@stud.th-luebeck.de">Technische Hochschule LÃ¼beck</vendor>
    <description>Dafny Support for Intellj with verification and execution.</description>

    <extensions defaultExtensionNs="com.intellij">
        <preloadingActivity implementation="DafnyPreloadingActivity"
                            id="DafnyPreloadingActivity" />
    </extensions>

    <application-components>
        <component>
            <implementation-class>org.wso2.lsp4intellij.IntellijLanguageClient</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <inspectionToolProvider implementation="org.wso2.lsp4intellij.contributors.inspection.LSPInspectionProvider"
                                id="LSPInspectionProvider"/>
    </extensions>

    <!--DafnyLanguage -->
    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="DafnyLanguage.DafnyFileTypeFactory"/>
        <lang.syntaxHighlighterFactory language="Dafny" implementationClass="DafnyLanguage.DafnySyntaxHighlighterFactory"/>
        <lang.parserDefinition language="Dafny" implementationClass="DafnyLanguage.DafnyParserDefinition"/>
        <additionalTextAttributes scheme="Default" file="DafnyColorScheme.xml"/>
    </extensions>



    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>