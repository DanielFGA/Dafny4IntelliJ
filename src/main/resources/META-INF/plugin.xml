<idea-plugin>
    <id>DafnyPlugin4Intellij.DafnyPlugin4Intellij</id>
    <name>Dafny4Intellij</name>
    <vendor email="daniel.figia@stud.th-luebeck.de">Technische Hochschule LÃ¼beck</vendor>
    <description>Dafny Support for Intellj with verification and execution.</description>

    <extensions defaultExtensionNs="com.intellij">
        <preloadingActivity implementation="DafnyPreloadingActivity"
                            id="DafnyPreloadingActivity" />
    </extensions>

    <application-components>
        <component>
            <implementation-class>org.wso2.lsp4intellij.IntellijLanguageClient</implementation-class>
        </component>
    </application-components>

    <!--LSP4Intellij -->
    <extensions defaultExtensionNs="com.intellij">
        <inspectionToolProvider implementation="org.wso2.lsp4intellij.contributors.inspection.LSPInspectionProvider"
                                id="LSPInspectionProvider"/>
    </extensions>

    <!--Dafny Tool Window -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Dafny" anchor="bottom" factoryClass="DafnyGUI.DafnyToolWindow.DafnyToolWindowFactory"></toolWindow>
    </extensions>

    <!--DafnyLanguage -->
    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="DafnyLanguage.DafnyFileTypeFactory"/>
        <lang.syntaxHighlighterFactory language="Dafny" implementationClass="DafnyLanguage.DafnySyntaxHighlighterFactory"/>
        <additionalTextAttributes scheme="Default" file="DafnyColorScheme.xml"/>
    </extensions>

    <!--DafnyGUI.DafnyProjectWizard -->
    <extensions defaultExtensionNs="com.intellij">
        <moduleType id="DAFNY_MODULE" implementationClass="DafnyGUI.DafnyProjectWizard.DafnyModuleType"/>
        <projectConfigurable id="Dafny" groupId="language"
                             provider="DafnyGUI.DafnyConfigurationProvider.DafnyConfigurable"
                             dynamic="false"/>
        <applicationService serviceInterface="DafnyGUI.DafnyConfiguration.DafnyStateService"
                            serviceImplementation="DafnyGUI.DafnyConfiguration.DafnyStateService" />
    </extensions>
    
    <actions>
        <action id="Dafny.NewDafnyFile"
                class="DafnyGUI.DafnyActions.DafnyCreateFileAction"
                text="Dafny File"
                description="Create new Dafny file">
            <add-to-group group-id="NewGroup"
                          anchor="before"
                          relative-to-action="NewFile"/>
        </action>
    </actions>




    <actions>
    </actions>
</idea-plugin>