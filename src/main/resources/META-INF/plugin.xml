<idea-plugin>
    <id>DafnyPlugin4Intellij.DafnyPlugin4Intellij</id>
    <name>Dafny4Intellij</name>
    <vendor email="daniel.figia@gmx.de">Daniel Figia</vendor>
    <description>Dafny Support for Intellj with verification and execution.</description>
    <idea-version since-build="UI-191" />

    <application-components>
        <!--Dafny-->
        <component>
            <implementation-class>DafnyCommunication.Dafny</implementation-class>
        </component>
    </application-components>


    <extensions defaultExtensionNs="com.intellij">
        <!--DafnyLanguage -->
        <fileTypeFactory implementation="DafnyLanguage.DafnyFileTypeFactory"/>
        <lang.syntaxHighlighterFactory language="Dafny" implementationClass="DafnyLanguage.DafnySyntaxHighlighterFactory"/>
        <additionalTextAttributes scheme="Default" file="DafnyColorScheme.xml"/>
        <externalAnnotator language="Dafny" implementationClass="DafnyLanguage.DafnyExternalAnnotator"></externalAnnotator>
        <!--Dafny Tool Window -->
        <toolWindow id="Dafny" anchor="bottom" factoryClass="DafnyGUI.DafnyToolWindow.DafnyToolWindowFactory"></toolWindow>
        <!--DafnyProjectWizard -->
        <moduleType id="DAFNY_MODULE" implementationClass="DafnyGUI.DafnyProjectWizard.DafnyModuleType"/>
        <!--DafnyConfigurableProvider -->
        <projectConfigurable id="Dafny" groupId="language"
                             provider="DafnyGUI.DafnyConfigurationProvider.DafnyConfigurable"
                             dynamic="false"/>
        <!--DafnyStateService -->
        <applicationService serviceImplementation="DafnyGUI.DafnyConfiguration.DafnyStateService" />
    </extensions>

    <actions>
        <!-- DafnyCreateFileAction -->
        <action id="DafnyCommunication.NewDafnyFile" class="DafnyGUI.DafnyActions.DafnyCreateFileAction"
                text="Dafny File" description="Create new Dafny file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>
    </actions>

</idea-plugin>